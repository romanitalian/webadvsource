    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width')
        link(href='assets/css/main.css', rel='stylesheet')

        block title
            title #{ttl} | main
