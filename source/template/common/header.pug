        .wrapper
            section.section.hero
                .hero__bg
                    img(src="assets/img/bg_1800.jpg" alt="mounting background").hero__bg-img

                .hero__container
                    img(src="assets/img/bg_title.png" alt="bg_title").hero-title-pic

                .user
                    .user__pic-container
                        .user__pic-wrapper
                            img(src="assets/img/user.jpg" alt="").user__pic-img
                        .user__name Roman
                        .user__desc Личный сайт веб разработчика
                ul.socials.socials__header
                    each icon in icons
                        li.socials__item
                            a(href=icon.href, title=icon.title).socials__link
                                svg.socials__icon
                                    use(xlink:href=`assets/img/sprite.svg#${icon.id}`)
                button(type="button").hamburger.hamburger--emphatic
                    span.hamburger-box
                        span.hamburger-inner